<mujoco model="eel_simple">
    <compiler angle="degree" coordinate="local"/>
    <option timestep="0.002"/>

    <!-- <asset>
        <mesh name="tail" file="tail_simple.stl"/>
    </asset> -->
    <asset>
        <mesh name="tail" file="tail.stl"  scale="0.001 0.001 0.001"/>
        <mesh name="seg2_mesh" file="bus.stl" scale="0.001 0.001 0.001"/>
        <mesh name="seg3_mesh" file="bus.stl" scale="0.001 0.001 0.001"/>
        <mesh name="seg4_mesh" file="bus.stl" scale="0.001 0.001 0.001"/>
        <mesh name="seg5_mesh" file="bus.stl" scale="0.001 0.001 0.001"/>
        <mesh name="seg6_mesh" file="bustail.stl" scale="0.001 0.001 0.001"/>
    </asset>
    <default>
        <joint
            type="hinge"
            axis="0 0 1"
            range="-135 135"
            damping="3"
            stiffness="20"
            armature="0.1"
        />
        <geom rgba="0.6 0.8 1 1" density="200"/>
    </default>

    <worldbody>
        <geom type="plane" size="5 5 0.1" rgba="0.3 0.5 1 0.3"/>
        <!-- Head -->
        <body name="head" pos="0 0 0">
            <geom type="cylinder" size="0.025 0.05" euler="0 90 0"/>
            <joint name="j1"/>

            <!-- Segment 2 -->
                            <body name="seg2" pos="0.085 0 0"> 
                                <!-- 碰撞 / 物理骨架（保留） -->   
                                <geom type="box" size="0.04 0.02 0.025" rgba="0 0 0 0"/>

                                <geom type="mesh" mesh="seg2_mesh"
                                    contype="0" conaffinity="0"
                                    quat="0 0 1 0"
                                    pos="0.1 -0.02 0.02"
                                    rgba="1 0 0 1"/>
                                <joint name="j2"/>

                <!-- Segment 3 -->
                            <body name="seg3" pos="0.085 0 0"> 
                                <!-- 碰撞 / 物理骨架（保留） -->   
                                <geom type="box" size="0.04 0.02 0.025" rgba="0 0 0 0"/>

                                <geom type="mesh" mesh="seg3_mesh"
                                    contype="0" conaffinity="0"
                                    quat="0 0 1 0"
                                    pos="0.1 -0.02 0.02"
                                    rgba="1 0 0 1"/>
                                <joint name="j3"/>

                    <!-- Segment 4 -->
                            <body name="seg4" pos="0.085 0 0"> 
                                <!-- 碰撞 / 物理骨架（保留） -->   
                                <geom type="box" size="0.04 0.02 0.025" rgba="0 0 0 0"/>

                                <geom type="mesh" mesh="seg4_mesh"
                                    contype="0" conaffinity="0"
                                    quat="0 0 1 0"
                                    pos="0.08 -0.02 0.02"
                                    rgba="1 0 0 1"/>
                                <joint name="j4"/>

                        <!-- Segment 5 -->
                            <body name="seg5" pos="0.085 0 0"> 
                                <!-- 碰撞 / 物理骨架（保留） -->   
                                <geom type="box" size="0.04 0.02 0.025" rgba="0 0 0 0"/>

                                <geom type="mesh" mesh="seg5_mesh"
                                    contype="0" conaffinity="0"
                                    quat="0 0 1 0"
                                    pos="0.07 -0.02 0.02"
                                    rgba="1 0 0 1"/>
                                <joint name="j5"/>

                            <!-- Segment 6 -->
                            <body name="seg6" pos="0.085 0 0"> 
                                <!-- 碰撞 / 物理骨架（保留） -->   
                                <geom type="box" size="0.04 0.02 0.025" rgba="0 0 0 0"/>

                                <geom type="mesh" mesh="seg6_mesh"
                                    contype="0" conaffinity="0"
                                    quat="1 0 0 0"
                                    pos="-0.03 -0.02 -0.02"
                                    rgba="1 0 0 1"/>
                                <joint name="j6"/>

                                <!-- Tail -->
                                <body name="tail" pos="0.045 0 0">
                                    <geom type="mesh" mesh="tail"
                                    contype="0" conaffinity="0"
                                    quat="1 -1 0 0"
                                    pos="0 -0.01 0.02"
                                    rgba="1 0 0 1"/>
                                </body>

                            </body>
                        </body>
                    </body>
                </body>

            </body>
        </body>

    </worldbody>

    <actuator>
        <position joint="j1" kp="100"/>
        <position joint="j2" kp="100"/>
        <position joint="j3" kp="100"/>
        <position joint="j4" kp="100"/>
        <position joint="j5" kp="100"/>
        <position joint="j6" kp="100"/>
    </actuator>

</mujoco>
