<mujoco model="eel_simple">
    <compiler angle="degree" coordinate="local"/>
    <option timestep="0.002"/>

    <asset>
        <mesh name="tail" file="tail_simple.stl"/>
    </asset>

    <default>
        <joint
            type="hinge"
            axis="0 0 1"
            range="-135 135"
            damping="3"
            stiffness="20"
            armature="0.1"
        />
        <geom rgba="0.6 0.8 1 1" density="200"/>
    </default>

    <worldbody>
        <geom type="plane" size="5 5 0.1" rgba="0.3 0.5 1 0.3"/>
        <!-- Head -->
        <body name="head" pos="0 0 0">
            <geom type="cylinder" size="0.025 0.05" euler="0 90 0"/>
            <joint name="j1"/>

            <!-- Segment 2 -->
            <body name="seg2" pos="0.095 0 0">
                <geom type="box" size="0.04 0.02 0.025"/>
                <joint name="j2"/>

                <!-- Segment 3 -->
                <body name="seg3" pos="0.085 0 0">
                    <geom type="box" size="0.04 0.02 0.025"/>
                    <joint name="j3"/>

                    <!-- Segment 4 -->
                    <body name="seg4" pos="0.085 0 0">
                        <geom type="box" size="0.04 0.02 0.025"/>
                        <joint name="j4"/>

                        <!-- Segment 5 -->
                        <body name="seg5" pos="0.085 0 0">
                            <geom type="box" size="0.04 0.02 0.025"/>
                            <joint name="j5"/>

                            <!-- Segment 6 -->
                            <body name="seg6" pos="0.085 0 0">
                                <geom type="box" size="0.04 0.02 0.025"/>
                                <joint name="j6"/>

                                <!-- Tail -->
                                <body name="tail" pos="0.045 0 0">
                                    <geom type="mesh" mesh="tail"/>
                                </body>

                            </body>
                        </body>
                    </body>
                </body>

            </body>
        </body>

    </worldbody>

    <actuator>
        <position joint="j1" kp="100"/>
        <position joint="j2" kp="100"/>
        <position joint="j3" kp="100"/>
        <position joint="j4" kp="100"/>
        <position joint="j5" kp="100"/>
        <position joint="j6" kp="100"/>
    </actuator>

</mujoco>
